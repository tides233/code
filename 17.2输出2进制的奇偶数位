//输出一个数的2进制位的奇数位和偶数位
//从右往左定义奇数位与偶数位


#include<stdio.h>
int main()
{
	int n = 0;
	int i = 0;
	scanf("%d", &n);
	//先输出偶数位   1010-0000  0000-0000  0000-0000  0000-0000
	//想得到最高位的1，将其向右移动31位；同理，想得到第二个偶数位，将其向右移动29位即可；
	for (i = 31; i >= 1; i -= 2)
	{
		printf("%d ", (n >> i) & 1);
	}
	printf("\n");
	//接着打印奇数位
	for (i = 30; i >= 0; i -= 2)
	{
		printf("%d ", (n >> i) & 1);

	}

	return 0;
}
